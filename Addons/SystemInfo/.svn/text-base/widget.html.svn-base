<div class="span{$addons_config.width}">
	<div class="columns-mod">
		<div class="hd cf">
			<h5>{$addons_config.title}</h5>
			<div class="title-opt">
			</div>
		</div>
		<div class="bd">
			<div class="sys-info">
				<table>
					<tr>
						<th>{$Think.lang.L_SYSTEM_VERSION}</th>
						<td>{$Think.ONETHINK_VERSION}</td>
					</tr>
					<tr>
						<th>{$Think.lang.L_SERVER_VERSION}</th>
						<td>{$Think.const.PHP_OS}</td>
					</tr>
					<tr>
						<th>{$Think.lang.L_THINKPHP_VERSION}</th>
						<td>{$Think.VERSION}</td>
					</tr>
					<tr>
						<th>{$Think.lang.L_RUN_VERSION}</th>
						<td>{$_SERVER['SERVER_SOFTWARE']}</td>
					</tr>
					<tr>
						<th>{$Think.lang.L_MYSQL_VERSION}</th>
						<php>
							$system_info_mysql = M()->query("select version() as v;");
						</php>
						<td>{$system_info_mysql.0.v}</td>
					</tr>
					<tr>
						<th>{$Think.lang.L_UPLOAD_SIZE}</th>
						<td>{:ini_get('upload_max_filesize')}</td>
					</tr>
				</table>
			</div>
		</div>
	</div>
</div>