<extend name="Public/base"/>

<block name="body">
<div class="main-title">
		<h2>友情链接分类列表</h2>
	</div>
	<div class="tab-wrap">
		<ul class="tab-nav nav">
			<li><a href="{:U('Admin/Addons/adminList' , array('name'=>'Links'))}">连接列表</a></li>
			<li class="current"><a href="{:addons_url('Links://Links/category')}">分类管理</a></li>
		</ul>
		<div class="tab-content">
			<div class="tools" style="margin-bottom:10px;">
			    <a class="btn" href="{:addons_url('Links://Links/add_category')}">新 增</a>
			</div>
			 <div class="data-table table-striped">
			<table>
				<thead>
					<tr>
						<th class="row-selected row-selected"><input class="check-all" type="checkbox"></th>
						<th>分类ID</th>
						<th>分类名称</th>
						<th>操作</th>
					</tr>
				</thead>
				<tbody>

					<volist name="_list" id="lv" >
					<tr>
						<td><input class="ids" type="checkbox" name="id[]" value="{$lv.id}"></td>
						<td>{$lv.id}</td>
						<td>{$lv.name}</td>
						<td>
							<a href="{:addons_url('Links://Links/category_edit',array('id'=>$lv['id']))}">编辑</a>
							<a class="confirm ajax-get" href="{:addons_url('Links://Links/del_category',array('id'=>$lv['id']))}">删除</a>
						</td>
					</tr>
					</volist>
				</tbody>
			</table>
			</div>
			<block name="script">
			<script type="text/javascript" src="__STATIC__/uploadify/jquery.uploadify.min.js"></script>
			</block>
		</div>
</div>
</block>
<block name="script">
	<script type="text/javascript">
    highlight_subnav('{:U("Admin/Addons/adminList" , array("name"=>"Links"))}');
	</script>
</block>

