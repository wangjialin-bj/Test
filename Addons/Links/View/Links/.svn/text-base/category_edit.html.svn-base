<extend name="Public/base"/>

<block name="body">
	<div class="main-title cf">
		<h2><if condition="$_GET['_action'] eq 'add_category'">新增<else/>编辑</if>友情连接分类</h2>
	</div>
	<!-- 表单 -->
	<form id="form" action="{:addons_url('Links://Links/update_category')}" method="post" class="form-horizontal">
		<!-- 基础文档模型 -->
		<div id="tab1" class="tab-pane in tab1">
			<div class="form-item cf">
				<label class="item-label">分类名称<span class="check-tips">（请输入友情连接站点名称）</span></label>
				<div class="controls">
					<input type="text" class="text input-large" name="name" value="{$info.name}">
				</div>
			</div>
		</div>
		<input type="hidden" name="id" value="{$info.id}"/>
		<div class="form-item cf">
			<input class="btn submit-btn hidden" type="submit" value="确 定" />
			<input class="btn btn-return" type="reset" value="重置" />
		</div>
	</form>
</block>
<block name="script">
	<script type="text/javascript">
    highlight_subnav('{:U("Admin/Addons/adminList" , array("name"=>"Links"))}');
	</script>
</block>
